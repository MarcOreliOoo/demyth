{
    "name": "@demyth/backend",
    "packageManager": "yarn@3.2.4",
    "main": "dist/src/main.js",
    "types": "dist/src/mais.d.ts",
    "version": "0.0.1",
    "scripts": {
        "build": "nest build",
        "clean": "rm -rf dist",
        "prettier:write": "prettier --write \"{src,test}/**/*.{ts,yml,yaml,json,md}\" \"**/*.json\"",
        "generate:openapi": "GENERATE_OPENAPI_SPEC=true nest start && prettier --write openapi.json",
        "generate:client": "TS_POST_PROCESS_FILE=\"prettier --write \"../sdk/src/generated/backend-client/**/*.{ts,yml,yaml,json,md}\"\" openapi-generator-cli generate --enable-post-process-file -i openapi.json -g typescript-fetch -o ../sdk/src/generated/backend-client --additional-properties=useSingleRequestParameter=true",
        "generate": "yarn generate:openapi && yarn generate:client",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:no-swagger": "ENABLE_SWAGGER=false node dist/src/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json"
    },
    "files": [
        "/typescript-api-client/**/*"
    ],
    "dependencies": {
        "@nestjs/common": "^9.0.0",
        "@nestjs/core": "^9.0.0",
        "@nestjs/platform-express": "^9.0.0",
        "@nestjs/axios": "^2.0.0",
        "@nestjs/config": "^2.3.1",
        "@nestjs/swagger": "^6.2.1",
        "axios": "^1.3.1",
        "reflect-metadata": "^0.1.13",
        "rxjs": "^7.2.0",
        "ethers": "^5.7.2",
        "http-errors": "^2.0.0"
    },
    "devDependencies": {
        "@nestjs/cli": "^9.0.0",
        "@nestjs/schematics": "^9.0.0",
        "@nestjs/testing": "^9.0.0",
        "@types/express": "^4.17.13",
        "@types/jest": "29.2.4",
        "@types/node": "18.11.18",
        "@types/supertest": "^2.0.11",
        "@types/http-errors": "^2.0.1",
        "@typescript-eslint/eslint-plugin": "^5.0.0",
        "@typescript-eslint/parser": "^5.0.0",
        "@openapitools/openapi-generator-cli": "^2.5.2",
        "eslint": "^8.0.1",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "jest": "29.3.1",
        "prettier": "^2.3.2",
        "source-map-support": "^0.5.20",
        "supertest": "^6.1.3",
        "ts-jest": "29.0.3",
        "ts-node": "^10.0.0",
        "tsconfig-paths": "4.1.1",
        "typescript": "^4.7.4"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
