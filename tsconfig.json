{
    "compilerOptions": {
        "target": "ES2021",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "composite": true,
        "resolveJsonModule": true,
        "outDir": "./dist"
    },
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Recommended",
    "references": [
        {
            "path": "./protocol"
        },
        {
            "path": "./frontend"
        },
        {
            "path": "./backend"
        }
    ],
    "exclude": ["./**/tests/**", "./**/dist/**", "./lib/*"],
    "include": ["./protocol/artifacts/**/*"]
}
